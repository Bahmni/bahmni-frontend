{
  "name": "bahmni-frontend",
  "private": true,
  "description": "Bahmni Frontend",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "lerna bootstrap && lerna run build && lerna clean --yes && lerna bootstrap",
    "build": "lerna run build",
    "verify": "lerna run lint && lerna run test && lerna run typescript",
    "prettier": "prettier --config prettier.config.js --write \"packages/**/*.{ts,tsx}\"",
    "test": "lerna run test",
    "test:parallel": "lerna run test --parallel",
    "coverage": "yarn test --coverage",
    "prepare": "husky install",
    "start": "lerna run start --parallel",
    "bahmni": "openmrs develop --spa-path '/bahmni/' --sources 'packages/bahmni-lab-lite-app/' --importmap 'packages/bahmni-lab-lite-app/bahmni-dist/importmap.json' --port 8200 --backend 'http://localhost:8080'",
    "assemble": "openmrs assemble --config 'spa-build-config.json' --mode 'config' --target 'packages/bahmni-lab-lite-app/bahmni-dist'"
  },
  "dependencies": {
    "swr": "^1.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "yarn run eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.16.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/runtime": "^7.12.13",
    "@openmrs/esm-framework": "^3.2.0",
    "@testing-library/dom": "^7.20.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.3",
    "@testing-library/user-event": "^12.0.11",
    "@types/carbon-components-react": "^7.10.9",
    "@types/jest": "^25.2.3",
    "@types/jest-axe": "^3.5.3",
    "@types/lodash-es": "^4.17.3",
    "@types/react": "^16.14.5",
    "@types/react-dom": "^16.9.12",
    "@types/react-router-dom": "^5.1.7",
    "@types/uuid": "^8.3.0",
    "@types/webpack-env": "^1.16.0",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "audit-ci": "^5.1.2",
    "axios-mock-adapter": "^1.20.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^10.0.0",
    "css-loader": "^5.2.4",
    "cssnano": "^4.1.10",
    "ejs": "^2.6.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "glob": "^7.1.3",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^6.0.0",
    "inquirer": "^7.3.3",
    "jest": "^26.4.2",
    "jest-axe": "^5.0.1",
    "jest-cli": "^26.4.2",
    "jest-watch-typeahead": "0.6.5",
    "jest-when": "^3.5.0",
    "lerna": "^3.20.2",
    "lerna-audit": "^1.3.3",
    "lint-staged": "10.3.0",
    "mini-css-extract-plugin": "^2.4.5",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^2.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.44.0",
    "openmrs": "next",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^26.4.2",
    "ts-loader": "^9.2.6",
    "typescript": "~4.5.2",
    "webpack": "^5.64.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "webpack-merge": "^5.8.0",
    "webpack-pwa-manifest": "^4.3.0",
    "webpack-stats-plugin": "^1.0.3"
  }
}
